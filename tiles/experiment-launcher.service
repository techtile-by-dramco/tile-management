[Unit]
Description=Config-driven script launcher
After=network.target

[Service]
Type=simple
Environment=UHD_IMAGES_DIR=/usr/share/uhd/4.8.0/images
ExecStart=/usr/bin/python3 /home/pi/tile-management/tiles/experiment-launcher.py /home/pi/tile-management/tiles/experiment-config.yaml
WorkingDirectory=/home/pi/tile-management
Restart=on-failure
KillMode=process
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
